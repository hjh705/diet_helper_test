<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="exercise">
    <select id="findAll" resultType="exerciseData">
        select
            *
        from
            exercise_data
    </select>

    <select id="findByExNo" resultType="exerciseData">
        select
            *
        from
            exercise_data
        where
            ex_no = #{exNo}
    </select>
    
    <insert id="insertExercise">
        insert into
            exercise_data
        values(
            "E"||seq_ex_no.nextval,
            #{exName},
            #{kCal}.
            #{bodyPart},
            #{exUrl}
        )
        <selectKey order="AFTER" resultType="String" keyProperty="exNo">
            select
                "E"||seq_ex_no.currval
            from
                dual
        </selectKey>
    </insert>

</mapper>